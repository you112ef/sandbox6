# VibeCode Terminal Environment Variables
# Copy this file to .env.local and fill in your values

# === Database ===
# PostgreSQL connection string (required for production)
POSTGRES_URL=postgresql://username:password@localhost:5432/vibecode_terminal
DATABASE_URL=postgresql://username:password@localhost:5432/vibecode_terminal

# === AI Provider API Keys ===
# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI API Key
GOOGLE_AI_API_KEY=AIza-your-google-ai-api-key-here

# Azure OpenAI (optional)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Cohere API Key (optional)
COHERE_API_KEY=your-cohere-api-key-here

# Hugging Face API Key (optional)
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key-here

# === Authentication ===
# Better Auth Secret (generate with: npx @better-auth/cli@latest secret)
BETTER_AUTH_SECRET=your-better-auth-secret-here

# Better Auth URL (your domain)
BETTER_AUTH_URL=https://your-domain.vercel.app

# OAuth Providers (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id

# === Vercel Sandbox ===
# Vercel Sandbox Token (for code execution)
VERCEL_SANDBOX_TOKEN=your-vercel-sandbox-token-here

# === Web Search ===
# Exa AI API Key (for web search)
EXA_API_KEY=your-exa-api-key-here

# Brave Search API Key (alternative to Exa)
BRAVE_API_KEY=your-brave-api-key-here

# === Collaboration ===
# WebSocket Server URL (for real-time collaboration)
WEBSOCKET_URL=wss://your-websocket-server.com

# === MCP Servers ===
# File-based MCP configuration
FILE_BASED_MCP_CONFIG=false

# === Redis (for caching and sessions) ===
# Redis URL (optional, for production caching)
REDIS_URL=redis://localhost:6379

# === Monitoring ===
# Sentry DSN (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# === Security ===
# JWT Secret (for API authentication)
JWT_SECRET=your-jwt-secret-here

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.vercel.app,https://localhost:3000

# === Feature Flags ===
# Enable/disable features
ENABLE_VOICE_ASSISTANT=true
ENABLE_COLLABORATION=true
ENABLE_MCP_SERVERS=true
ENABLE_WORKFLOWS=true
ENABLE_PLUGINS=true

# === Rate Limiting ===
# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# === File Storage ===
# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# === Email (for notifications) ===
# SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# === Analytics ===
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# PostHog (alternative analytics)
POSTHOG_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com